


<!DOCTYPE html>
<html lang="en">



<body>
    <!-- Begin page -->
    <div class="wrapper">


        

        <div class="content-page">
            <div class="content">

                <!-- Start Content-->
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box">
                                @* <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="javascript: void(0);">Hyper</a></li>
                                        <li class="breadcrumb-item"><a href="javascript: void(0);">CRM</a></li>
                                        <li class="breadcrumb-item active">Orders List</li>
                                    </ol>
                                </div> *@
                                <div class="page-title-right">
                                    <form class="d-flex">
                                        <div class="input-group">
                                            <input type="text" class="form-control form-control-light" id="dash-daterange">
                                            <span class="input-group-text bg-primary border-primary text-white">
                                                <i class="mdi mdi-calendar-range font-13"></i>
                                            </span>
                                        </div>
                                        <a href="javascript: void(0);" class="btn btn-primary ms-2">
                                            Export
                                        </a>

                                    </form>
                                </div>
                                <h4 class="page-title">Order List</h4>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row mb-2">
                                        <div class="col-xl-8">
                                            <form asp-controller="OrderOut" asp-action="OrderOutIndex" method="get" class="row gy-2 gx-2 align-items-center justify-content-xl-start justify-content-between">
                                                <div class="col-auto">
                                                    <label for="inputPassword2" class="visually-hidden">Search</label>

                                                    <input type="search" class="form-control" id="inputPassword2" name="search" placeholder="Search...">
                                                </div>
                                                <button style="width:auto" class="input-group-text btn btn-primary" type="submit">Search</button>
                                            </form>
                                        </div>
                                        <div class="col-xl-4">
                                            <div class="text-xl-end mt-xl-0 mt-2">
                                                <a style="margin-right:15px" asp-action="OrderOutCreate" asp-controller="OrderOut" class="btn btn-primary"><i class="mdi mdi-plus-circle me-2"></i>Add New Order</a>
                                                @Html.ActionLink("Export to Excel", "ExportToExcel", "OrderOut")
                                                @* <button type="button" class="btn btn-light mb-2">Export</button> *@
                                            </div>
                                        </div><!-- end col-->
                                    </div>
                                    <br />

                                    <div class="table-responsive">
                                        <table class="table table-centered table-nowrap mb-0">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>
                                                        Sr No.
                                                    </th>
                                                    <th>Date</th>
                                                    <th>Product/SKU</th>
                                                    <th>ProductId</th>
                                                    @* <th>Price</th> *@
                                                    <th>Quantity</th>
                                                    <th style="width: 125px;">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    int serialNumber = 1;
                                                }
                                               
                                                @foreach (var orderOut in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @serialNumber
                                                        </td>
                                                        <td>@orderOut.Date</td>
                                                        <td class="text-body fw-bold">@orderOut.ProductSKU</td>
                                                        <td>@orderOut.ProductId</td>
                                                       
                                                        <td>@orderOut.Quantity</td>
                                                        <td>
                                                            <a asp-action="OrderOutEdit" asp-route-id="@orderOut.Id" class="action-icon"> <i class="mdi mdi-square-edit-outline"></i></a>
                                                            <a asp-action="ProductDelete" asp-controller="Product" asp-route-id="@orderOut.Id" class="action-icon"> <i class="mdi mdi-delete"></i></a>
                                                            @* <form method="post" asp-route-id="@orderOut.Id" asp-action="OrderOutDelete" asp-controller="OrderOut">
                                                                <button type="submit"><i class="mdi mdi-delete"></i></button>
                                                            </form> *@
                                                        </td>
                                                    </tr>
                                                    serialNumber++;
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div> <!-- end card-body-->
                            </div> <!-- end card-->
                        </div> <!-- end col -->
                    </div> <!-- end row -->
                </div> <!-- container -->
            </div> <!-- content -->

        </div>

        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->

    </div>
    

    
</body>
</html>

  
